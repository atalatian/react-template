{
    "babelrc": true,
    "presets": [
        [
            "@babel/preset-env",
            {
                "targets": {
                    "edge": "17",
                    "firefox": "60",
                    "chrome": "67",
                    "safari": "11.1"
                },
                "useBuiltIns": "usage",
                "bugfixes": true,
                "corejs": { "version": "3.6.5", "proposals": true }
            }
        ],
        [
            "@babel/preset-typescript",
            {
                "allowDeclareFields": true,
                "allowNamespaces": true,
                "disallowAmbiguousJSXLike": false,
                "dts": false,
                "onlyRemoveTypeImports": true,
                "optimizeConstEnums": true
            }
        ]
    ]
}
